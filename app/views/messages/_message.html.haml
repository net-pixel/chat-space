.message
  .message__upper-info
    %p.message__upper-info--talker
      = message.user.name
    %p.message__upper-info--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__lower-info
    %p.message__lower-info--text
      - if message.content.present?
        = message.content
    %p.message__lower-info--image
      = image_tag message.image.url if message.image.present?